{% extends 'admin.njk' %}
{% block content %}
  <div class="recipeList">
    <form class="recipe" method="POST" action="/admin/recipes?_method=PUT">
      <div class="detailRecipeHead">
        <h2>Editar receita</h2>
        <div class="btns">
          <button type="button" class="btn_deletar_modal">Deletar</button>
          <button type="submit">Salvar receita</button>
        </div>
      </div>
      <div class="formRecipes">

        <input type="hidden" name="id" value="{{recipe.id}}">
        <div class="itemRecipe">
          <div>Nome da Receita</div>
          <input type="text" name="title" value="{{recipe.title}}">
        </div>

        <div class="itemRecipe">
          <div class="item_title">Imagem da receita</div>
          <input type="url" name="image" placeholder="https://" value="{{recipe.image}}">
        </div>

        <div class="itemRecipe">
          <div class="item_title">Ingredientes</div>
          <div id="ingredients">
            {% for ingredient in recipe.ingredients%}
              <div class="ingredient">
                <input type="text" name="ingredients[]" placeholder="Adicione os ingredientes separadamente" value="{{ingredient}}">
              </div>
            {% endfor %}
          </div>
          <span class="add_ingredient">
            Adicionar novo ingrediente</span>
        </div>

        <div class="itemRecipe">
          <div class="item_title">Modo de preparo</div>
          <div id="preparation">
            {% for preparatio in recipe.preparation%}
              <div class="passo">
                <input type="text" name="preparation[]" placeholder="Adicione os passos separadamente" value="{{preparatio}}">
              </div>
            {% endfor %}
          </div>
          <span class="add_passo">
            Adicionar novo passo</span>
        </div>
        <div class="itemRecipe">
          <div class="item_title">Informações adicionais</div>
          <textarea name="information">{{recipe.information}}</textarea>
        </div>

      </div>
    </form>
  </div>

  <div class="modal_content ">
    <div class="modal_excluir">
      <div class="modal_text">Deseja Realmente Excluir a receita "{{recipe.title}}"?</div>
        <form action="/admin/recipes?_method=DELETE" method="post">
          <input type="hidden" name="id" value="{{recipe.id}}">
      <div class="btn_modal">
          <button type="submit" class="btn_deletar">Deletar</button>
          <button type="button" class="btn_cancelar">Cancelar</button>
      </div>
        </form>
    </div>
  </div>
{% endblock content %}